{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Lista de Factura</h1>
    
    <form action="{{path('factura')}}" method ="post" {{ form_enctype(filter_form)}}
           {{form_widget (filter_form)}}
          <button type="submint" ><i class="search" ></i> buscar</button>
           <a href="{{path ('factura')}}"> ver listas</a>
     </form>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numerofactura</th>
                <th>Fecha</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('factura_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numeroFactura }}</td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.total }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('factura_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('factura_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('factura_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
